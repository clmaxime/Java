<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.cluzel.calculatrice.CalcController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="number" />
   <GridPane>
     <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Button mnemonicParsing="false" onAction="#enterNumber" text="7" />
         <Button mnemonicParsing="false" onAction="#enterNumber" text="8" GridPane.columnIndex="1" />
         <Button mnemonicParsing="false" onAction="#enterNumber" text="9" GridPane.columnIndex="2" />
         <Button mnemonicParsing="false" onAction="#enterNumber" text="4" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" onAction="#enterNumber" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" onAction="#enterNumber" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" onAction="#enterNumber" text="1" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" onAction="#enterNumber" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" onAction="#enterNumber" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" text="+" GridPane.columnIndex="3" />
         <Button mnemonicParsing="false" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" text="รท " GridPane.columnIndex="3" GridPane.rowIndex="3" />
      </children>
   </GridPane>
</VBox>
